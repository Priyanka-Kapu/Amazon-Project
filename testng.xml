<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">


<suite name="Amazon Suite">

<listeners>
<listener class-name="listerners.TestFail"></listener>
<listener class-name="listerners.Report"></listener>
</listeners>

<parameter name="browserInstance" value="chrome"></parameter>
<parameter name="url" value="https://www.amazon.in/"></parameter>

  <test name="Test">

    <classes>
      <class name="tests.HomePageTCs"/>
      <class name="tests.SignInPageTCs"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
